# COMPRA
GET   /compras                            controllers.Compras.inicio
POST  /compras/filtrar                    controllers.Compras.filtrar
POST  /compra/editar                      controllers.Compras.editar
POST  /compra/salvar                      controllers.Compras.salvar
POST  /compra/excluir                     controllers.Compras.excluir

# IMOBILIARIAS
GET   /imobiliarias                       controllers.Imobiliarias.inicio
POST  /imobiliarias/filtrar               controllers.Imobiliarias.filtrar
POST  /imobiliaria/editar                 controllers.Imobiliarias.editar
POST  /imobiliaria/salvar                 controllers.Imobiliarias.salvar
POST  /imobiliaria/excluir                controllers.Imobiliarias.excluir
POST  /imobiliaria/visualizar/listagem    controllers.Imobiliarias.visulizarListagem
GET   /imobiliaria/listagem               controllers.Imobiliarias.listagem

# ESTADO
GET   /estados                             controllers.Estados.inicio
POST  /estado/editar                       controllers.Estados.editar
POST  /estado/salvar                       controllers.Estados.salvar
POST  /estado/filtrar                      controllers.Estados.filtrar
POST  /estado/excluir                      controllers.Estados.excluir
GET   /estados/buscarEstados               controllers.Estados.buscarEstados(query)

#USUARIO
GET   /cadastrar/novo/usuario         controllers.Usuarios.novo()
POST  /usuarios/salvar             controllers.Usuarios.salvar
GET   /perfil/usuarioLogado        controllers.Usuarios.perfilUsuario()


#PERFIL
POST /perfil/salvar/alteracaoEmail                          controllers.Perfil.salvarAlteracaoEmail()
POST /perfil/salvar/senha                                   controllers.Perfil.salvarAlteracaoSenha


#PESSOAS
POST    /pessoa/salvar                controllers.Pessoas.salvar()
POST    /pessoas/filtrar              controllers.Pessoas.filtrar()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
